<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/reservationImage"
        style="@style/reservationImage"
        android:src="@drawable/bmw_x5" />

    <TextView
        android:id="@+id/reservationTitle"
        style="@style/reservationTitle"
        android:text="@string/brand" />

    <TextView
        android:id="@+id/reservationText"
        style="@style/reservationText"
        android:text="Reservation ID: 123456789" />

    <Button
        android:id="@+id/damageButton"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:width="70dp"
        android:height="10dp"
        android:padding="8dp"
        android:text="Report damage"
        android:textColor="@color/white"
        android:textSize="12dp" />

</androidx.cardview.widget.CardView>